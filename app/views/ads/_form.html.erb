<% form_for @ad do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :sponsor %><br />
    <%= f.text_field :sponsor %>
  </p>
  <p>
    <%= f.label :product_name %><br />
    <%= f.text_field :product_name %>
  </p>
  <p>
    <%= f.label :video_length %><br />
    <%= f.datetime_select :video_length %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
