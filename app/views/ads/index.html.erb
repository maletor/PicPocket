<% title "Ads" %>

<table>
  <tr>
    <th>Sponsor</th>
    <th>Product Name</th>
    <th>Video Length</th>
  </tr>
  <% for ad in @ads %>
    <tr>
      <td><%=h ad.sponsor %></td>
      <td><%=h ad.product_name %></td>
      <td><%=h ad.video_length %></td>
      <td><%= link_to "Show", ad %></td>
      <td><%= link_to "Edit", edit_ad_path(ad) %></td>
      <td><%= link_to "Destroy", ad, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Ad", new_ad_path %></p>
