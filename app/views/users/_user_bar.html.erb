<div id="user_bar">
<% if logged_in? %>
  <p>Welcome <%= current_user.username %> (<%= link_to 'Logout', logout_path %>)</p>
  <% if current_user.invitation_limit > 0 %>
    <p>
      <%= link_to 'Send invitation', new_invitation_path %>
      (<%= current_user.invitation_limit %> left)
    </p>
  <% end %>
<% else %>
  <p>If you have an account, <%= link_to "Login", login_path %></p>
<% end %>
</div>
