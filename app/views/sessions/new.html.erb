
<div id="login_box">
	<% form_tag sessions_path do %>
	<table>
	 	<tr>
	    	<td><%= label_tag :login, "Username/Email Address" %> :</td>
	    	<td><%= text_field_tag :login, params[:login] %></td>
		</tr>
		<tr>
	    	<td><%= label_tag :password %> :</td>
	    	<td><%= password_field_tag :password %></td>
		</tr>
	</table>
	<center><%= submit_tag "Log in", :id => "login_button" %> | <%= link_to "Forgot password?", forgot_path %></center>
	
	<% end %>
</div>
