<% form_for @event do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= f.select :category, ["Nuts", "Berries"], :prompt => "Select" %>
  </p>
<p>
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time %>
  </p>
<p>
    <%= f.label :finish_time %><br />
    <%= f.datetime_select :finish_time %>
  </p>
<p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
<p>
    <%= f.label :info %><br />
    <%= f.text_area :info %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
